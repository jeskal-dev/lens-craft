---
import { getCollection } from "astro:content";
import Layout from "../components/layouts/layout.astro";
import HomeHero from "../components/sections/home/hero.astro";
import HomeFeaturedWork from "../components/sections/home/featured-work.astro";
import HomePhilosophy from "../components/sections/home/philosophy.astro";
import HomeTestimonials from "../components/sections/home/testimonials.astro";

const featuredWorks = await getCollection("gallery", ({ data }) => {
  return data.featured === true;
});

const sortedWorks = featuredWorks
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);

const title = "Inicio";
---

<Layout title={title}>
  <HomeHero />
  <HomeFeaturedWork works={sortedWorks} />
  <HomePhilosophy />
  <HomeTestimonials />
</Layout>
