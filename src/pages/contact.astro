---
import Layout from '../layouts/Layout.astro';
---

<Layout title="LensCraft - Contacto">
  <div class="container mx-auto px-4 py-20 max-w-2xl">
    <h1 class="font-serif text-4xl md:text-5xl font-bold text-center mb-12">Hablemos</h1>
    
    <form class="space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-2">
          <label for="name" class="text-sm font-medium">Nombre</label>
          <input type="text" id="name" class="w-full px-4 py-2 rounded-lg border border-input bg-background focus:ring-2 focus:ring-ring outline-none transition-shadow" required />
        </div>
        <div class="space-y-2">
          <label for="email" class="text-sm font-medium">Email</label>
          <input type="email" id="email" class="w-full px-4 py-2 rounded-lg border border-input bg-background focus:ring-2 focus:ring-ring outline-none transition-shadow" required />
        </div>
      </div>
      
      <div class="space-y-2">
        <label for="type" class="text-sm font-medium">Tipo de Sesión</label>
        <select id="type" class="w-full px-4 py-2 rounded-lg border border-input bg-background focus:ring-2 focus:ring-ring outline-none transition-shadow">
          <option>Boda</option>
          <option>Retrato</option>
          <option>Editorial</option>
          <option>Otro</option>
        </select>
      </div>
      
      <div class="space-y-2">
        <label for="message" class="text-sm font-medium">Mensaje</label>
        <textarea id="message" rows="5" class="w-full px-4 py-2 rounded-lg border border-input bg-background focus:ring-2 focus:ring-ring outline-none transition-shadow" required></textarea>
      </div>
      
      <button type="submit" class="w-full bg-primary text-primary-foreground py-3 rounded-lg font-medium hover:scale-[1.02] transition-transform">
        Enviar Mensaje
      </button>
    </form>

    <div class="mt-20 text-center space-y-4">
        <p class="text-muted-foreground">O contáctame directamente:</p>
        <div class="flex justify-center gap-8">
            <a href="mailto:hola@lenscraft.com" class="hover:text-primary transition-colors">hola@lenscraft.com</a>
            <span class="text-border">|</span>
            <a href="tel:+1234567890" class="hover:text-primary transition-colors">+1 234 567 890</a>
        </div>
    </div>
  </div>
</Layout>
